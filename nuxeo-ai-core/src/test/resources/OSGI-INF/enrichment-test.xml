<?xml version="1.0"?>
<component name="org.nuxeo.enrichment.test" version="1.0">

  <extension point="enrichment" target="org.nuxeo.ai.services.AIComponent">
    <enrichment name="e1" kind="/classification" class="org.nuxeo.ai.enrichment.BasicEnrichmentService">
      <mimeTypes>
        <mimeType name="image/jpeg"/>
      </mimeTypes>
      <encoding>UTF-8</encoding>
      <option name="maxResults">50</option>
      <option name="features">all</option>
    </enrichment>
    <enrichment name="e2" kind="/classification" class="org.nuxeo.ai.enrichment.BasicEnrichmentService" maxSize="45">
      <mimeTypes>
        <mimeType name="image/png" normalized="true" />
      </mimeTypes>
      <option name="maxResults">100</option>
    </enrichment>
    <enrichment name="e3" kind="/classification" class="org.nuxeo.ai.enrichment.BasicEnrichmentService" />
    <enrichment name="logging" kind="/classification/sentiment" class="org.nuxeo.ai.enrichment.LoggingEnrichmentService" />
    <enrichment name="reverse" kind="/classification/sentiment" class="org.nuxeo.ai.enrichment.TextReversingEnrichmentService" />
  </extension>
</component>
